<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/now_playing_background"
    tools:context=".NowPlaying">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/musicPreviousBtnNP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/now_playing_background"
            android:contentDescription="music_previous"
            android:src="@drawable/music_previous" />

        <ImageButton
            android:id="@+id/musicPlayBtnNP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/now_playing_background"
            android:contentDescription="music_play"
            android:src="@drawable/music_play" />

        <ImageButton
            android:id="@+id/musicNextBtnNP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/now_playing_background"
            android:contentDescription="music_next"
            android:src="@drawable/music_next" />

    </LinearLayout>

    <ImageView
        android:id="@+id/musicImageNP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:src="@drawable/test_image" />

</LinearLayout>